<h1>{{title}}</h1> <!--타이틀 영역, {{title}}은 서버에서 내려주는 변수-->

<!--검색어 영역-->
<input type = "text" name = "search" id = "search" value="" size="50" placeholder="Write answer"/>
<button onclick="location.href=`/?search=${document.getElementById('search').value}`">search</button>
<br/>
<!-- 글쓰기 페이지 링크 이동-->
<a href="/write">wirting</a>
<br/>

<!--글 목록-->
<div>
    <table>
        <thead>
            <tr>
                <th width="50%">제목</th>
                <th>작성자</th>
                <th>조회수</th>
                <th>등록일</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td><a href="/detail/{{_id}}">{{title}}</a></td>
                <td>{{writer}}</td>
                <td>{{hits}}</td>
                <td>{{dateString createdDt}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!--페이징 영역, '<'표시는 &lt;, '>'표시는 &gt;-->
<div>
    {{#with paginator}}
    <a href ="/?page=1&search={{@root.search}}">&lt;&lt;</a>
    {{#if hasPrev}}
    <a href="/?page={{prevPage}}&search={{@root.search}}">&lt;</a>
    {{else}}
    <a>&lt;</a>
    {{/if}}
    {{#each pageList}}
    {{#if (eq . @root.paginator.page)}}
    <a>{{.}}</a>
    {{else}}
    <a href = "/?page={{.}}&search={{@root.search}}">{{.}}</a>
    {{/if}}
    {{/each}}
    {{#if hasNext}}
    <a href="/?page={{nextPage}}&search={{@root.search}}">&gt;</a>
    {{else}}
    <a>&gt;</a>
    {{/if}}
    <a href="/?page={{lastPage}}&search={{@root.search}}">&gt;&gt;</a>
    {{/with}}
</div>
